@model JobSeekerInputModel
@{
    ViewData["Title"] = "Profile";
}

div class="row">
<div class="col-12">
    <form asp-action="Profile" asp-controller="JobSeekers" method="post">
        <input type="hidden" asp-for="JobSeekerId" />
        <input type="hidden" asp-for="UserId" />
        <div class="form-group row mb-1">
            <h3>Update profile</h3>
        </div>
        <div class="form-group row mb-1">
            <label asp-for="FullName" class="col-form-label col-2 text-end"></label>
            <div class="col-4">
                <input type="text" asp-for="FullName" class="form-control form-control-sm" />
                <span class="text-danger" style="font-size:small" asp-validation-for="FullName"></span>
            </div>
        </div>
        <div class="form-group row mb-1">
            <label asp-for="Email" class="col-form-label col-2 text-end"></label>
            <div class="col-4">
                <input  asp-for="Email" class="form-control form-control-sm" />
                <span class="text-danger" style="font-size:small" asp-validation-for="Email"></span>
            </div>
        </div>
        <div class="form-group row mb-1">
            <label asp-for="Phone" class="col-form-label col-2 text-end"></label>
            <div class="col-4">
                <input  asp-for="Phone" class="form-control form-control-sm" />
                <span class="text-danger" style="font-size:small" asp-validation-for="Phone"></span>
            </div>
        </div>
        <div class="form-group row mb-1">
            <label asp-for="Description" class="col-form-label col-2 text-end"></label>
            <div class="col-4">
                <textarea  asp-for="Description" class="form-control form-control-sm"></textarea>
                <span class="text-danger" style="font-size:small" asp-validation-for="Description"></span>
            </div>
        </div>
        <div class="form-group row mb-1">

            <div class="col-4 offset-2 text-end">
                <div class="form-check">
                    <button type="submit" class="btn btn-primary btn-sm">Update</button>
                </div>
            </div>
        </div>
    </form>
</div>


