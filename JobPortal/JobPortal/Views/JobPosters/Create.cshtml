@model JobPostInputModel
@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-12">
        <form asp-action="Create" asp-controller="JobPosters" method="post">
            <div class="form-group row mb-1">
                <h3>Create</h3>
            </div>
            <div class="form-group row mb-1">
                <label asp-for="JobPostName" class="col-form-label col-2 text-end"></label>
                <div class="col-4">
                    <input type="text" asp-for="JobPostName" class="form-control form-control-sm" />
                    <span class="text-danger" style="font-size:small" asp-validation-for="JobPostName"></span>
                </div>
            </div>
            <div class="form-group row mb-1">
                <label asp-for="Postion" class="col-form-label col-2 text-end"></label>
                <div class="col-4">
                    <input  asp-for="Postion" class="form-control form-control-sm" />
                    <span class="text-danger" style="font-size:small" asp-validation-for="Postion"></span>
                </div>
            </div>
            <div class="form-group row mb-1">
                <label asp-for="Location" class="col-form-label col-2 text-end"></label>
                <div class="col-4">
                    <input type="text" asp-for="Location" class="form-control form-control-sm" />
                    <span class="text-danger" style="font-size:small" asp-validation-for="Location"></span>
                </div>
            </div>
            <div class="form-group row mb-1">
                <label asp-for="Description" class="col-form-label col-2 text-end"></label>
                <div class="col-4">
                    <textarea type="text" asp-for="Description" class="form-control form-control-sm"></textarea>
                    <span class="text-danger" style="font-size:small" asp-validation-for="Description"></span>
                </div>
            </div>
            <div class="form-group row mb-1">

                <div class="col-4 offset-2 text-end">
                    <div class="form-check">
                        <button type="submit" class="btn btn-primary btn-sm">Save</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section scripts
{
    <script src="~/libs/jquery/jquery.js"></script>
    <script src="~/libs/validate/jquery.validate.js"></script>

    <script src="~/libs/validate/jquery.validate.unobtrusive.js"></script>

}
  
